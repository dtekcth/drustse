doctype html
html(lang='sv')
    head
        block title
            title DRust

        meta(charset='utf8')
        link(type='text/plain', rel='author' href='/humans.txt')
        link(href='https://fonts.googleapis.com/css?family=Fira+Sans', rel='stylesheet', type='text/css')
        link(rel='stylesheet', href=('/stylesheets/layout.css'))
        script(type='text/javascript', src=('/js/test.js'))

        //- For page-specific scripts or css
        block includes

        block link
            - var selected;

    -
        var menu = {'DRust' : '/drust',
                    'Basen' : '/basen',
                    'Verktyg' : '/verktyg',
                    'Automaten' : '/automaten',
                    'Flipper' : '/flipper'};

    body
        block banner
            div#thin-banner

        main
            header
                block header
                    a(href="/")
                        img(src="/images/drust16.png")
                    nav.site-nav
                        each link, name in menu
                            if name === selected
                                a.active(href=link)= name
                            else
                                a(href=link)= name

            block content
